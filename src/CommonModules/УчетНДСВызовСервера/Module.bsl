Функция ПолучитьСтавкуНДС(СтавкаНДС) Экспорт

	Если СтавкаНДС = Перечисления.СтавкиНДС.БезНДС
		ИЛИ СтавкаНДС = Перечисления.СтавкиНДС.НДС0 Тогда
		Значение = 0;
	ИначеЕсли СтавкаНДС = Перечисления.СтавкиНДС.НДС10 Тогда
		Значение = 10;
	ИначеЕсли СтавкаНДС = Перечисления.СтавкиНДС.НДС18 Тогда
		Значение = 18;
	ИначеЕсли СтавкаНДС = Перечисления.СтавкиНДС.НДС20 Тогда
		Значение = 20;
	Иначе
		Значение = 0;
	КонецЕсли; 
	
	Возврат Значение;

