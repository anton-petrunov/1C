Процедура ЗаполнитьПроизводственныйКалендарьНаСервере()
	
	//15. Заполнить регистр сведений "Производственный календарь" данными за текущий год:
	//добавить для каждой даты текушего года запись в регистр сведений и заполнить "ВидДня" по следующему принципу:
	//1 января и 8 марта: Вид дня "Праздник"
	//31 декабря и 7 марта: Вид дня "Предпраздничный"
	//Для всех остальных дат: 
	//   - если день недели "Суббота", то вид дня "Суббота"
	//   - если день недели "Воскресенье", то вид дня "Воскресенье"
	//   - если день недели с понедельника по пятницу, то вид дня "Рабочий"
	
	ТекДата = НачалоГода(ТекущаяДата());
	КонДата = КонецГода(ТекущаяДата());
	
	Пока ТекДата <= КонДата Цикл
		
		НоваяЗапись = РегистрыСведений.ПроизводственныйКалендарь.СоздатьМенеджерЗаписи();
		НоваяЗапись.Дата = ТекДата;
		
		Если (День(ТекДата) = 1 И Месяц(ТекДата) = 1) ИЛИ (День(ТекДата) = 8 И Месяц(ТекДата) = 3) Тогда
			ВидДня = Перечисления.ВидыДнейКалендаря.Праздник;
		ИначеЕсли (День(ТекДата) = 31 И Месяц(ТекДата) = 12) ИЛИ (День(ТекДата) = 7 И Месяц(ТекДата) = 3) Тогда
			ВидДня = Перечисления.ВидыДнейКалендаря.Предпраздничный;
		ИначеЕсли ДеньНедели(ТекДата) = 6 Тогда
			ВидДня = Перечисления.ВидыДнейКалендаря.Суббота;
		ИначеЕсли ДеньНедели(ТекДата) = 7 Тогда
			ВидДня = Перечисления.ВидыДнейКалендаря.Воскресенье;
		Иначе
			ВидДня = Перечисления.ВидыДнейКалендаря.Рабочий;
		КонецЕсли; 
		
		НоваяЗапись.ВидДня = ВидДня;
		НоваяЗапись.Записать();
		
		ТекДата = ТекДата + 86400;
		
	КонецЦикла; 
	
	Сообщение = Новый СообщениеПользователю;
	Сообщение.Текст = "Заполнение календаря завершено...";
